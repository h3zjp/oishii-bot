{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./built",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": false
  },
  "exclude": [
    "test/**/*"
  ]
}